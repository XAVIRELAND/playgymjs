<section class="ui raised segment">
    <header class="ui header">
        Assessments
    </header>
    {{#each memberlist.assessments}}
    <table class=" ui single line celled table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Weight</th>
            <th>Chest</th>
            <th>Thigh</th>
            <th>Upper Arm</th>
            <th>Waist</th>
            <th>Hips</th>
            <th>Comment</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>{{date}}</td>
            <td>{{weight}}</td>
            <td>{{chest}} </td>
            <td>{{thigh}}</td>
            <td>{{upperarm}}</td>
            <td>{{waist}}</td>
            <td>{{hips}}</td>
            <td>{{trend}}</td>
            <td></td>
        </tr>
        </tbody>
    </table>
    <br>
    <div>
        <form class="ui large form" action="/trainerassessment/{{memberlist.id}}/addComment/{{assessment.id}}" method="POST">
            <div class="field">
                <label>Comment</label>
                <input placeholder="Comment" type="text" name="comment">
            </div>
            <button class="ui blue submit button">Update</button>
        </form>
    </div>
    {{/each}}
</section>