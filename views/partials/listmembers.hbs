{{#each memberlists}}
    <section class="ui segment">

        <div class="ui relaxed divided list">
            <div class="item">
                <i class="large github middle aligned icon"></i>
                <div class="content">
                    <div class="ui header">
                        <a href="/memberlist/{{id}}">{{name}} </a>
                        <a href="/dashboard/deleteMemberlist/{{id}}">
                            <i class="trash alternate red icon"></i>
                        </a>
                    </div>
                    <div class="description">{{assessments.length}} assessments</div>
                </div>
            </div>
        </div>
    </section>
{{/each}}